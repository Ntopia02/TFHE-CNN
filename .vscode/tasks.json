{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "mkdir",
            "args": [
                "-p",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
        },

        {
            "label": "compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${fileDirname}/main.cpp",
                "${fileDirname}/src/*.cpp",
                "-I",
                "${fileDirname}/include",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}.exe",
                "-ltfhe-spqlios-fma",
                "-fopenmp"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",    
                "isDefault": true
            },
            "dependsOn":[
                "build"
            ]
        }
    ]
}
